<LoginPage>:
    
    email : email
    pwd : pwd
    FloatLayout:
    size: root.width, root.height
    Label:
        text : "EMAIL: "
        size_hint : 0.2, 0.1
        pos_hint : {"x":0.25, "top":0.9}
    TextInput:
        id : email
        multiline :False
        size_hint : 0.3, 0.1
        pos_hint : {"x" : 0.45, "top" : 0.9}
    Label:
        text : "PASSWORD: "
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.25, "top" : 0.7}
    TextInput:
        id : pwd
        multiline :False
        size_hint : 0.3, 0.1
        pos_hint : {"x" : 0.45, "top" : 0.7}
    Button:
        text : "Log In"
        size_hint : 0.4, 0.1
        pos_hint : {"x" : 0.33, "top" : 0.4}
        on_release: 
            app.root.current = 'signup'
            root.submit_info(email.text, pwd.text)
    Button:
        text : "LOGIN"
        size_hint : 0.3, 0.1
        pos_hint : {"x" : 0.39, "top" : 0.2}
        on_release: 
            root.verify_credentials()
            root.manager.transition.direction = "up"
 

<SignupPage>:
    name2 : name2
    email : email
    pwd : pwd
    FloatLayout:
        Label:
            text : "NAME: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.9}
        TextInput:
            id : name2
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.9}
        Label:
            text : "EMAIL: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.7}
        TextInput:
            id : email
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.7}
        Label:
            text : "PASSWORD: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.5}
        TextInput:
            id : pwd
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.5}
        Button:
            text : "SUBMIT"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.39, "top" : 0.28}
            on_press :
                root.signupbtn()
                root.manager.transition.direction = "right"


<UserPage>:
    name: "user"
    Button:
        text: "back"
        on_release: app.root.current = "login_page"